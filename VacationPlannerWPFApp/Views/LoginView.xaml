<UserControl
    x:Class="VacationPlannerWPFApp.Views.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:command="clr-namespace:VacationPlannerWPFApp.Command"
    xmlns:component="clr-namespace:VacationPlannerWPFApp.Component"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VacationPlannerWPFApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:VacationPlannerWPFApp.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:LoginViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <Label HorizontalAlignment="Center" Content="{Binding Info, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox
                Width="120"
                HorizontalAlignment="Center"
                Text="{Binding Login, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
            <component:PasswordBind
                Width="120"
                HorizontalAlignment="Center"
                Password="{Binding Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

            <Button
                HorizontalAlignment="Center"
                Command="{Binding LoginCommand}"
                CommandParameter="Login"
                Content="Button" />
        </StackPanel>
    </Grid>
</UserControl>
