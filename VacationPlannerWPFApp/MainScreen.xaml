<Window
    x:Class="VacationPlannerWPFApp.MainScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VacationPlannerWPFApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:VacationPlannerWPFApp.ViewModels.HomeApp"
    xmlns:viewsApp="clr-namespace:VacationPlannerWPFApp.Views.HomeApp"
    Title="Vacation Planner by Krystian Petek - Main App"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <ContentControl Content="{Binding SelectedViewModel}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type viewModels:HomeAppViewModel}">
                    <viewsApp:HomeAppView />
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>

    </Grid>
</Window>
