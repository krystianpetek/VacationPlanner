<Application
    x:Class="VacationPlannerWPFApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModels="clr-namespace:VacationPlannerWPFApp.ViewModels.Login"
    xmlns:views="clr-namespace:VacationPlannerWPFApp.Views"
    StartupUri="LoginScreen.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModels:HomeViewModels}">
            <views:HomeView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:LoginViewModel}">
            <views:LoginView />
        </DataTemplate>

    </Application.Resources>
</Application>
